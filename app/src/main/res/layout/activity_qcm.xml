<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4C095"
    android:orientation="vertical"
    tools:context=".controller.QcmActivity">


    <TextView
        android:id="@+id/activity_qcm_points"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"

        android:padding="5dp"
        android:text="My Points : 0"
        android:textColor="#071e22"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_qcm_question"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"


        android:padding="10dp"
        android:text=""
        android:textColor="#EE2E31"
        android:textSize="15sp" />

    <Button
        android:id="@+id/activity_qcm_answer1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"

        android:background="#679289"
        android:padding="5dp"
        android:text=""
        android:textColor="#071e22"
        android:textSize="15sp" />

    <Button
        android:id="@+id/activity_qcm_answer2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"

        android:background="#679289"
        android:padding="5dp"
        android:text=""
        android:textColor="#071e22"
        android:textSize="15sp" />

    <Button
        android:id="@+id/activity_qcm_answer3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"

        android:background="#679289"
        android:padding="5dp"
        android:text=""
        android:textColor="#071e22"
        android:textSize="15sp" />

    <Button
        android:id="@+id/activity_qcm_answer4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"

        android:background="#679289"
        android:padding="5dp"
        android:text=""
        android:textColor="#071e22"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_qcm_q_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"


        android:padding="5dp"
        android:text="3 left"
        android:textColor="#EE2E31"
        android:textSize="15sp" />
</LinearLayout>